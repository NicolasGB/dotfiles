# Font
font-family = JetBrainsMono Nerd Font
font-size = 10.5

# Theme
theme = Everforest Dark Hard
background-opacity = 0.7

# Cursor
cursor-invert-fg-bg = true

mouse-hide-while-typing = true

# Keybingds
# Config 
keybind = ctrl+comma=open_config
keybind = alt+a>r=reload_config

# Tabs and Splits
keybind = alt+a>t=new_tab
keybind = alt+a>s=new_split:down
keybind = alt+n=new_split:right
keybind = ctrl+shift+n=new_window
keybind = alt+a>c=close_surface

# Command palette
keybind = alt+p=toggle_command_palette


# Window
keybind = ctrl+enter=unbind
keybind = alt+f4=unbind

# Temporal fix for copilot cli
keybind = enter=text:\r

# Resize splits
keybind = alt+a>equal=equalize_splits
keybind = alt+shift+h=resize_split:left,20
keybind = alt+shift+k=resize_split:up,20
keybind = alt+shift+j=resize_split:down,20
keybind = alt+shift+l=resize_split:right,20
keybind = alt+f=toggle_split_zoom

# Moving around
## Splits
keybind = alt+h=goto_split:left
keybind = alt+k=goto_split:top
keybind = alt+j=goto_split:bottom
keybind = alt+l=goto_split:right

## Tabs
keybind = alt+one=goto_tab:1
keybind = alt+two=goto_tab:2
keybind = alt+three=goto_tab:3
keybind = alt+four=goto_tab:4
keybind = alt+five=goto_tab:5
keybind = alt+six=goto_tab:6
keybind = alt+seven=goto_tab:7
keybind = alt+eight=goto_tab:8
keybind = alt+nine=goto_tab:9

keybind = alt+a>l=next_tab
keybind = alt+a>h=previous_tab

# Clipboard
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

# Quitting
keybind = ctrl+shift+q=quit


# Window 
## This in the future should allow multiple things see: https://github.com/ghostty-org/ghostty/issues/1392
window-inherit-working-directory = true
window-subtitle = working-directory
# window-decoration = false
window-new-tab-position = end
window-theme = ghostty

window-padding-color = extend
split-divider-color = "#a7c080"
window-padding-x = 3

confirm-close-surface = false

unfocused-split-opacity = 0.7
unfocused-split-fill = #1B231F
resize-overlay = never

# GTK Decoration
adw-toolbar-style = flat
gtk-wide-tabs = true

# Behavior
# Reuse the instance, instead of launching a new process every time
gtk-single-instance = true

# custom-shader = shaders/cursor_warp.glsl
